{
  "extends": "stylelint-config-standard",
  "plugins": ["stylelint-order"],
  "rules": {
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "order/properties-order": [
      "position",
      "top",
      "right",
      "bottom",
      "left",
      "z-index",

      "display",
      "float",
      "width",
      "height",
      "margin",
      "padding",

      "font-family",
      "font-style",
      "font-size",
      "line-height",
      "font-weight",
      "text-align",
      "color",

      "background-color",
      "border",
      "border-radius",
      "opacity",

      "transition",
      "transform",

      "will-change"
    ]
  }
}